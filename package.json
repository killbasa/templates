{
	"name": "templates",
	"version": "0.0.1",
	"author": "killbasa",
	"private": true,
	"workspaces": [
		"templates/*"
	],
	"scripts": {
		"postinstall": "husky install",
		"update": "yarn upgrade-interactive"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@kbotdev/eslint-config": "^1.1.0",
		"@kbotdev/prettier-config": "^1.0.0",
		"@kbotdev/ts-config": "^1.0.0",
		"@types/node": "^20.5.8",
		"eslint": "^8.48.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"prettier": "^3.0.3"
	},
	"lint-staged": {
		"*.{mjs,cjs,js,ts}": [
			"eslint --fix --ext js,ts",
			"prettier --write --loglevel=warn \"**/*.{mjs,cjs,js,ts}\""
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write --loglevel=warn \"**/*.{json,yml,yaml,md}\""
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"engines": {
		"node": ">=20.x"
	},
	"packageManager": "yarn@4.0.2"
}
